<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="35dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FF6B13EA"
        android:text="Notification visibility"/>

    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:paddingTop="16dp"
        android:id="@+id/whenScreenIsOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:paddingStart="35dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="When the screen is on"/>

        <TextView
            android:id="@+id/whenScreenIsOnDescription"
            android:layout_width="wrap_content"
            android:paddingStart="35dp"
            android:paddingTop="4dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="None"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/whenScreenIsOn"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        android:paddingTop="16dp"
        android:id="@+id/whenScreenIsOff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title2"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:paddingStart="35dp"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="When the screen is on"/>

        <TextView
            android:id="@+id/whenScreenIsOffDescription"
            android:layout_width="wrap_content"
            android:paddingStart="35dp"
            android:paddingTop="4dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="None"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>