<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:text="Exceptions: Calls"
            android:textColor="#FF6B13EA"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:paddingTop="25dp"
            android:id="@+id/exceptionsCallsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:paddingStart="35dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Calls"/>

            <TextView
                android:id="@+id/exceptionsCallsDescription"
                android:layout_width="wrap_content"
                android:paddingStart="35dp"
                android:paddingTop="4dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="From starred contacts only"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/repeatCallersLayout"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/exceptionsCallsLayout"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/repeatCallersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="35dp"
                android:text="Allow repeat callers"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/repeatCallersDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_below="@id/repeatCallersTitle"
                android:layout_marginLeft="35dp"
                android:text="If the same person calls second time\nwithin 15 minutes period"/>

            <Switch
                android:id="@+id/repeatCallersSwitch"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/repeatCallersDescription"
                android:layout_below="@id/repeatCallersTitle"/>
        </RelativeLayout>

        <View
            android:id="@+id/separator2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="#969696"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repeatCallersLayout" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:text="Exceptions: Messages"
            android:textColor="#FF6B13EA"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator2" />

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:paddingTop="25dp"
            android:id="@+id/exceptionsMessagesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:paddingStart="35dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Messages"/>

            <TextView
                android:id="@+id/exceptionsMessagesDescription"
                android:layout_width="wrap_content"
                android:paddingStart="35dp"
                android:paddingTop="4dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="From starred contacts only"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/exceptionsMessagesLayout"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            android:paddingTop="25dp"
            android:id="@+id/exceptionsConversationsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:paddingStart="35dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:text="Conversations"/>

            <TextView
                android:id="@+id/exceptionsConversationsDescirption"
                android:layout_width="wrap_content"
                android:paddingStart="35dp"
                android:paddingTop="4dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:text="From starred contacts only"/>
        </LinearLayout>

        <View
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="#969696"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/exceptionsConversationsLayout" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:text="Exceptions: Other interruptions"
            android:textSize="14sp"
            android:textColor="#FF6B13EA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator3" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="Alarms"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Switch
            android:id="@+id/alarmsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <Switch
            android:id="@+id/mediaSoundsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp"
            android:text="Media sounds"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="Touch sounds"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <Switch
            android:id="@+id/touchSoundsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView9" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="Reminders"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <Switch
            android:id="@+id/RemindersSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="Calendar events"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <Switch
            android:id="@+id/EventsSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView11" />

        <View
            android:id="@+id/separator4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="16dp"
            android:background="#969696"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EventsSwitch" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="16dp"
            android:text="Block visual disturbances"
            android:textColor="#FF6B13EA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/separator4" />

        <RadioGroup
            android:id="@+id/radiogroup"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/noSoundsFromNotificationLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/noSoundsButton"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/noSoundsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/noSoundsButton"
                    android:text="No sounds from notifications"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_below="@id/noSoundsTitle"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/noSoundsButton"
                    android:text="You will see notifications on your screen"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/noVisualsAndSoundsFromNotificationsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/noVisualsAndSoundsButton"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/noVisualsAndSoundsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/noVisualsAndSoundsButton"
                    android:text="No visuals or sounds from notifications"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/noVisualsAndSoundsTitle"
                    android:layout_toRightOf="@id/noVisualsAndSoundsButton"
                    android:text="You won't see or hear notifications"/>

            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/customPolicy"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/customPolicyButton"
                    android:layout_marginStart="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/customPolicyButton"
                    android:id="@+id/customPolicyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_toRightOf="@id/customPolicyButton"
                    android:text="Custom"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_marginTop="12dp"
                    android:background="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/customPolicyTextView"
                    android:src="@drawable/baseline_settings_deep_purple_400_24dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>